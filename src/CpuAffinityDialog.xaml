<Window x:Class="NZTS_App.Views.CpuAffinityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select CPU Affinity" Height="450" Width="500">
    <Grid>
        <!-- ListBox to display the list of CPU cores -->
        <ListBox x:Name="CpuCoreListBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,80">
            <!-- The CPU cores will be populated here -->
        </ListBox>

        <!-- StackPanel to hold the OK and Reset buttons, aligned at the bottom -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <!-- OK Button -->
            <Button x:Name="OkButton" Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            <!-- Reset Button -->
            <Button x:Name="ResetButton" Content="Reset" Width="75" Margin="5" Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
