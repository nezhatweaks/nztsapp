<Window x:Class="NZTS_App.Views.CpuAffinityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select CPU Affinity" Height="250" Width="300">
    <Grid>
        <ListBox Name="CpuCoreListBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <!-- The CPU cores will be populated here -->
        </ListBox>
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Margin="10" Click="OkButton_Click"/>
    </Grid>
</Window>
