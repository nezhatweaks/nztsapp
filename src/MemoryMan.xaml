                                            </TextBlock>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
        </TextBlock>

                                <ToggleButton x:Name="TieredStopAtLevelToggle" Style="{StaticResource iOSToggleButton}" Click="TieredStopAtLevelToggle_Click" Width="50"/>
