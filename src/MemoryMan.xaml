<UserControl x:Class="NZTS_App.Views.MemoryMan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NZTS_App.Views">
    
    
    <UserControl.Resources>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <Style x:Key="iOSToggleButton" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="0" 
                                    CornerRadius="10" 
                                    Padding="5">
                                <Ellipse x:Name="Ellipse" 
                                         Fill="White" 
                                         Width="10" 
                                         Height="10" 
                                         HorizontalAlignment="Left" 
                                         VerticalAlignment="Center" 
                                         Margin="0,0,0,0" />
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="35,0,0,0" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4CAF50" />
                                <Setter TargetName="Ellipse" Property="HorizontalAlignment" Value="Right" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
        </Style>

        <Style TargetType="Border" x:Key="DiscordBorderStyle">
            <Setter Property="Background" Value="#2F3136"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderBrush" Value="#2F3136"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Button" x:Key="TabButtonStyle">
            <Setter Property="Background" Value="#2C2F33"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2F3136"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3D4147"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#5A5C60"/>
                </Trigger>
                <Trigger Property="Tag" Value="Active">
                    <Setter Property="Background" Value="#4875e8"/>
                    <!-- Active tab color -->
                    
                    <!-- Active tab border color -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <ContentControl x:Name="ContentMemory" Background="#2C2F33" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- Content area -->
                    <RowDefinition Height="Auto" />
                    <!-- Button area -->
                </Grid.RowDefinitions>

                
                    <StackPanel x:Name="VerifiedContent" Visibility="Visible">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch" Grid.Row="0" Height="285" >
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Width" Value="23"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ScrollBar" >
                                            <Grid Background="Transparent"  >
                                                <Track Name="PART_Track" IsDirectionReversed="true">
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Name="PART_DecreaseButton"
       Content="▲"
       Command="ScrollBar.LineUpCommand"
       Background="Transparent"
       Width="0" Height="0"/>
                                                    </Track.DecreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb Name="Thumb" 
Background="Black" 
Opacity="0.7" 
Width="3" 
MinHeight="200"/>
                                                    </Track.Thumb>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Name="PART_IncreaseButton"
       Content="▼"
       Command="ScrollBar.LineDownCommand"
       Background="Transparent"
       Width="0" Height="0"/>
                                                    </Track.IncreaseRepeatButton>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ScrollViewer.Resources>
                        <StackPanel>
                            <TextBlock Text="General Memory Optimizations" Foreground="White" FontSize="20" FontWeight="Bold" Margin="15,10,0,0" />
                        <!-- DisablePagingExecutive -->
                        <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Disable Paging Executive" FontWeight="Bold" Margin="0,0,10,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            <TextBlock>
                The Paging Executive controls whether system processes are swapped in and out of physical memory 
                to virtual memory (paging). 
                <LineBreak/>
                Disabling paging can improve performance by keeping critical system processes in physical memory, 
                <LineBreak/>
                but may increase memory usage and could impact system stability in certain cases.
                                            </TextBlock>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
</TextBlock>

                                <ToggleButton x:Name="DisablePagingExecutiveToggle" Style="{StaticResource iOSToggleButton}" Click="DisablePagingExecutiveToggle_Click" Width="50"/>
                                <TextBlock x:Name="PagingStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- ContextSwitchDeadband -->
                        <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="Green" Offset="0" />
                                    <GradientStop Color="#2F3136" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Context Switch Deadband" FontWeight="Bold" Margin="0,0,10,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            <TextBlock>
                The Context Switch Deadband controls the frequency at which the system switches between tasks or threads. 
                <LineBreak/>
                Setting this value to 1 reduces the deadband, allowing for quicker context switches and better system responsiveness. 
                <LineBreak/>
                Deleting or resetting the value will restore the default switching behavior.
                                            </TextBlock>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
</TextBlock>

                                <ToggleButton x:Name="ContextSwitchDeadbandToggle" Style="{StaticResource iOSToggleButton}" Click="ContextSwitchDeadbandToggle_Click" Width="50"/>
                                <TextBlock x:Name="ContextSwitchStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- LatencySensitivityHint -->
                        <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="Green" Offset="0" />
                                    <GradientStop Color="#2F3136" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Latency Sensitivity Hint" FontWeight="Bold" Margin="0,0,10,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            <TextBlock>
                The Latency Sensitivity Hint adjusts the priority of system resources for applications that are sensitive 
                to latency, such as real-time applications or high-performance workloads.
                <LineBreak/>
                Set this value to 1 to give those applications higher priority for lower latency. 
                <LineBreak/>
                Toggle off will restore the default system behavior.
                                            </TextBlock>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
</TextBlock>

                                <ToggleButton x:Name="LatencySensitivityHintToggle" Style="{StaticResource iOSToggleButton}" Click="LatencySensitivityHintToggle_Click" Width="50"/>
                                <TextBlock x:Name="LatencyStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Disable Mitigations -->
                        <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="Green" Offset="0" />
                                    <GradientStop Color="#2F3136" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Disable OS Mitigations" FontWeight="Bold" Margin="0,0,10,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            <TextBlock>
                Disabling OS mitigations can improve PC performance by removing certain security features 
                that may cause overhead, especially on older or lower-performance hardware. 
                <LineBreak/>
                However, this may reduce protection against certain security vulnerabilities. 
                <LineBreak/>
                Only disable if you are aware of the potential risks.
                                            </TextBlock>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
</TextBlock>

                                <ToggleButton x:Name="DisableOSMitigationsToggle" Style="{StaticResource iOSToggleButton}" Click="DisableOSMitigationsToggle_Click" Width="50"/>
                                <TextBlock x:Name="DisableOSMitigationsStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- SystemCacheDirtyPageThreshold -->
                        <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="Green" Offset="0" />
                                    <GradientStop Color="#2F3136" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="System Cache Dirty Page (3)" FontWeight="Bold" Margin="0,0,10,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            <TextBlock>
                The SystemCacheDirtyPageThreshold controls the amount of memory allocated for dirty pages. 
                <LineBreak/>
                Set this value to 3 for better performance, especially under heavy memory load, 
                <LineBreak/>
                or delete to reset the threshold and clear the cache.
                                            </TextBlock>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
</TextBlock>

                                <ToggleButton x:Name="SystemCacheDirtyPageThresholdToggle" Style="{StaticResource iOSToggleButton}" Click="SystemCacheDirtyPageThresholdToggle_Click" Width="50"/>
                                <TextBlock x:Name="SystemCacheDirtyPageThresholdStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- LargePageSizeInBytes -->
                        <Border Style="{StaticResource DiscordBorderStyle}" Visibility="Collapsed" Padding="10" Height="50" Margin="10,10,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="Green" Offset="0" />
                                    <GradientStop Color="#2F3136" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="LargePageSizeInBytes (3)" FontWeight="Bold" Margin="0,0,10,0">
                                    <TextBlock.ToolTip>
                                        <ToolTip>
                                            <TextBlock>
                Set this value to 3 to enable optimal large page sizes for improved performance, 
                especially for memory-intensive workloads. 
                <LineBreak/>
                This value may reduce memory overhead and increase access speed. 
                <LineBreak/>
                Toggle off if you wish to revert to the default memory settings.
                                            </TextBlock>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
</TextBlock>

                                <ToggleButton x:Name="LargePageSizeInBytesToggle" Style="{StaticResource iOSToggleButton}" Click="LargePageSizeInBytesToggle_Click" Width="50"/>
                                
                            </StackPanel>
                        </Border>

                            <TextBlock Text="Advanced Memory Optimizations" Foreground="White" FontSize="20" FontWeight="Bold" Margin="15,10,0,0" />

                            <!-- MmStrictFileSharing -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Strict File Sharing" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                                    Enabling strict file sharing enforces more strict policies for file system operations.
                                    <LineBreak/>
                                    This can help improve system security, but may result in slower performance for certain operations.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                    </TextBlock>
                                    <ToggleButton x:Name="StrictFileSharingToggle" Style="{StaticResource iOSToggleButton}" Click="StrictFileSharingToggle_Click" Width="50"/>
                                    <TextBlock x:Name="StrictFileSharingStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- MmAllowPagedPoolGrow -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Allow Paged Pool Grow" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                                    Allows the paged pool to grow beyond the default size to accommodate system needs.
                                    <LineBreak/>
                                    Enabling this feature may help improve system performance under heavy memory load.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                    </TextBlock>
                                    <ToggleButton x:Name="AllowPagedPoolGrowToggle" Style="{StaticResource iOSToggleButton}" Click="AllowPagedPoolGrowToggle_Click" Width="50"/>
                                    <TextBlock x:Name="AllowPagedPoolGrowStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- MmDataClusterSize -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Data Cluster Size" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                                    Defines the size of the data cluster. 
                                    <LineBreak/>
                                    Larger cluster sizes can improve performance for certain file system operations but may increase overhead.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                    </TextBlock>
                                    <ToggleButton x:Name="DataClusterSizeToggle" Style="{StaticResource iOSToggleButton}" Click="DataClusterSizeToggle_Click" Width="50"/>
                                    <TextBlock x:Name="DataClusterSizeStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- MmMapIoSpace -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Map IO Space" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                                    Enables or disables the mapping of IO space for devices in the system.
                                    <LineBreak/>
                                    This can improve system performance, but may reduce hardware compatibility.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                    </TextBlock>
                                    <ToggleButton x:Name="MapIoSpaceToggle" Style="{StaticResource iOSToggleButton}" Click="MapIoSpaceToggle_Click" Width="50"/>
                                    <TextBlock x:Name="MapIoSpaceStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- MmSystemVaStart -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="System VA Start" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                                    Sets the starting address of the system's virtual address space.
                                    <LineBreak/>
                                    Changing this can affect how system memory is allocated.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                    </TextBlock>
                                    <ToggleButton x:Name="SystemVaStartToggle" Style="{StaticResource iOSToggleButton}" Click="SystemVaStartToggle_Click" Width="50"/>
                                    <TextBlock x:Name="SystemVaStartStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- System VA End -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="System VA End" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                Sets the ending address of the system's virtual address space.
                <LineBreak/>
                Adjusting this can impact memory allocation and the system's behavior.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
</TextBlock>
                                    <ToggleButton x:Name="SystemVaEndToggle" Style="{StaticResource iOSToggleButton}" Click="SystemVaEndToggle_Click" Width="50"/>
                                    <TextBlock x:Name="SystemVaEndStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Force Section Creation -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Force Section Creation" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                        Enables or disables the creation of memory sections.
                        <LineBreak/>
                        This can affect memory management and performance.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
        </TextBlock>
                                    <ToggleButton x:Name="ForceSectionCreationToggle" Style="{StaticResource iOSToggleButton}" Click="ForceSectionCreationToggle_Click" Width="50"/>
                                    <TextBlock x:Name="ForceSectionCreationStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Large System Cache -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Disable Large System Cache" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                        Enables or disables the large system cache.
                        <LineBreak/>
                        Disabling this might improve performance but could reduce memory efficiency.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
        </TextBlock>
                                    <ToggleButton x:Name="LargeSystemCacheToggle" Style="{StaticResource iOSToggleButton}" Click="LargeSystemCacheToggle_Click" Width="50"/>
                                    <TextBlock x:Name="LargeSystemCacheStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            

                            <!-- Trim Threshold on Memory Pressure -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Trim Threshold on Memory Pressure" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                        Sets the threshold for trimming memory when under memory pressure.
                        <LineBreak/>
                        Adjusting this setting can help manage system performance under heavy load.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
        </TextBlock>
                                    <ToggleButton x:Name="TrimThresholdOnMemoryPressureToggle" Style="{StaticResource iOSToggleButton}" Click="TrimThresholdOnMemoryPressureToggle_Click" Width="50"/>
                                    <TextBlock x:Name="TrimThresholdOnMemoryPressureStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Enable Kernel Page Compression -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Disable Kernel Page Compression" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                        Enables or disables kernel page compression to reduce memory usage.
                        <LineBreak/>
                        Enabling this setting can improve memory efficiency, but might affect performance.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
        </TextBlock>
                                    <ToggleButton x:Name="EnableKernelPageCompressionToggle" Style="{StaticResource iOSToggleButton}" Click="EnableKernelPageCompressionToggle_Click" Width="50"/>
                                    <TextBlock x:Name="EnableKernelPageCompressionStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Cache Cluster Size -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Cache Cluster Size" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                        Sets the cluster size used for caching.
                        <LineBreak/>
                        Adjusting this can impact system performance, especially for data-heavy tasks.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
        </TextBlock>
                                    <ToggleButton x:Name="CacheClusterSizeToggle" Style="{StaticResource iOSToggleButton}" Click="CacheClusterSizeToggle_Click" Width="50"/>
                                    <TextBlock x:Name="CacheClusterSizeStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Page Fault Coalescing -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Page Fault Coalescing" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                        Enables or disables page fault coalescing.
                        <LineBreak/>
                        This can improve system performance by reducing the number of page faults.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
        </TextBlock>
                                    <ToggleButton x:Name="PageFaultCoalescingToggle" Style="{StaticResource iOSToggleButton}" Click="PageFaultCoalescingToggle_Click" Width="50"/>
                                    <TextBlock x:Name="PageFaultCoalescingStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Hard Fault Thread Priority -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Hard Fault Thread Priority" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                        Sets the priority of the thread handling hard page faults.
                        <LineBreak/>
                        Adjusting this can influence system responsiveness during page faults.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
        </TextBlock>
                                    <ToggleButton x:Name="HardFaultThreadPriorityToggle" Style="{StaticResource iOSToggleButton}" Click="HardFaultThreadPriorityToggle_Click" Width="50"/>
                                    <TextBlock x:Name="HardFaultThreadPriorityStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- TLB Flush Threshold -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="TLB Flush Threshold" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                        Sets the threshold for flushing the Translation Lookaside Buffer (TLB).
                        <LineBreak/>
                        Tuning this can influence the performance of memory management.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
        </TextBlock>
                                    <ToggleButton x:Name="TlbFlushThresholdToggle" Style="{StaticResource iOSToggleButton}" Click="TlbFlushThresholdToggle_Click" Width="50"/>
                                    <TextBlock x:Name="TlbFlushThresholdStatusTextBlock" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Enforce Cache Partitioning -->
                            <Border Style="{StaticResource DiscordBorderStyle}" Padding="10" Height="50" Margin="10,10,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Enforce Cache Partitioning" FontWeight="Bold" Margin="0,0,10,0">
                                        <TextBlock.ToolTip>
                                            <ToolTip>
                                                <TextBlock>
                        Enforces cache partitioning for better memory access isolation.
                        <LineBreak/>
                        Enabling this can improve performance but may increase overhead.
                                                </TextBlock>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
